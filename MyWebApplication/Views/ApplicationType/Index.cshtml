@model IEnumerable<MyWebApplication.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"> <i class="fas fa-plus"></i> &nbsp; New Application Type</a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Application Name</th>
                    <th>Action</th>
                </tr>
                <tr></tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a  asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-info mx-2">
                                                                        <i class="fas fa-edit" ></i> &nbsp; Edit</a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger">
                                                                        <i class="fas fa-trash-alt"></i> &nbsp; Delete</a>
                            </div>
                        </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Application Type Exists!</p>
    }
</div>